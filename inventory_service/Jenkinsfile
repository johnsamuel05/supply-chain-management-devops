pipeline {
    agent any
    environment {
        // Define the Dockerfile path and the image name
        DOCKERFILE_PATH = "/inventory_service/Dockerfile"
        IMAGE_NAME = "inventory-service:${env.BUILD_NUMBER}"
    }
    stages {
        stage('Build') {
            steps {
                // Build the Docker image
                script {
                    docker.build(IMAGE_NAME, "-f ${DOCKERFILE_PATH} .")
                }
            }
        }
        stage('Test') {
            steps {
                // Test the Docker image
                script {
                    docker.image(IMAGE_NAME).inside {
                        sh 'pytest'
                    }
                }
            }
        }
        stage('Push to Docker Registry') {
            steps {
                // Push the Docker image to the Docker registry
                script {
                    docker.withRegistry('https://index.docker.io/v1/', 'dockerhub_id') {
                        docker.image(IMAGE_NAME).push()
                    }
                }
            }
        }
    }
}
